<h1>Log in</h1>

<%= form_tag sessions_path do %>
  <p>
    <%= label_tag :email %><br />
    <%= text_field_tag :email, params[:email] %>
  </p>
  <p>
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </p>
  <p><%= submit_tag "Log in", class: 'button button-primary' %></p>
<% end %>

<p>
  <%= link_to "Sign up", sign_up_path, class: 'button' %>
</p>
