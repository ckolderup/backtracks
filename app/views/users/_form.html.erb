<%= form_for @user, url: @user.new_record? ? account_create_path : account_update_path do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.hidden_field :id %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :display_name %>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :send_weekly_email %>
    <%= f.check_box :send_weekly_email %>
  <p>
    <%= f.label :password %>
    <%= "(leave blank if unchanged)" if @updating %>
    <br />
    <%= f.password_field :password, autocomplete: 'off'%>
  </p>
  <p>
  <%= f.label :password_confirmation %>
  <%= "(leave blank if unchanged)" if @updating %>
  <br />
    <%= f.password_field :password_confirmation, autocomplete: 'off' %>
  </p>
  <p class="button"><%= f.submit user_form_submit_button_text %></p>
<% end %>

